<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_ditch_item_lineName"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:maxEms="13"
                android:singleLine="true"
                android:text="线路名称"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_ditch_item_split1"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_ditch_item_lineName"
                android:text=", "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_ditch_item_lineNo"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_ditch_item_split1"
                android:text="序号"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_ditch_item_split2"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_ditch_item_lineNo"
                android:text=", "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_ditch_item_layTyape"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_ditch_item_split2"
                android:text="敷设方式"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_ditch_item_dele"
            style="@style/text_Size16_color_000000"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/delete"
            android:padding="5dp" />
    </RelativeLayout>

</LinearLayout>