<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_white"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageButton
        android:id="@+id/imgBtn_map_measure_dis"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_radius_white_selector"
        android:src="@drawable/ic_dis" />

    <ImageButton
        android:id="@+id/imgBtn_map_measure_area"
        android:layout_width="60dp"
        android:layout_height="40sp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_radius_white_selector"
        android:src="@drawable/ic_area" />

    <ImageButton
        android:id="@+id/imgBtn_map_measure_polygon"
        android:layout_width="60dp"
        android:layout_height="40sp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_radius_white_selector"
        android:src="@drawable/ic_polygon" />

    <ImageButton
        android:id="@+id/imgBtn_map_measure_clear"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_radius_white_selector"
        android:src="@drawable/ic_clear" />

</LinearLayout>