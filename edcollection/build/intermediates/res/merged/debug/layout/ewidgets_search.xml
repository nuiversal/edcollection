<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_ewidgets_search_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp" >

    <ImageView
        android:id="@+id/iv_ewidgets_search_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="2dp"
        android:src="@drawable/back_48" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="10"
        android:background="@drawable/border_line_white_bg" >

        <ImageView
            android:id="@+id/iv_ewidgets_search_searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/search_32" />

        <EditText
            android:id="@+id/edtTxt_ewidgets_search_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/ll_ewidgets_search_rightBox"
            android:layout_toRightOf="@+id/iv_ewidgets_search_searchIcon"
            android:background="@color/white"
            android:singleLine="true"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/ll_ewidgets_search_rightBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/iv_ewidgets_search_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/loading_32"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_ewidgets_search_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/e_close"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ewidgets_search_ok"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:background="@drawable/button_search"
        android:text="搜索"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>