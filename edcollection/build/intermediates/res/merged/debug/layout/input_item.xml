<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/border_line_white_bg"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/tv_input_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18" />

    <EditText
        android:id="@+id/edtTxt_input_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/tv_input_item_unit"
        android:layout_toRightOf="@+id/tv_input_item_title"
        android:background="@color/white"
        android:singleLine="true"
        android:textSize="@dimen/text_size_16" >
    </EditText>

    <TextView
        android:id="@+id/tv_input_item_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="cm"
        android:textSize="@dimen/text_size_16" />

</RelativeLayout>