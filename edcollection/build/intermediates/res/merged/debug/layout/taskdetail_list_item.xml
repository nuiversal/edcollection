<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <LinearLayout
            android:id="@+id/ll_taskdetail_list_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_taskdetail_list_map"
                style="@style/text_Size16_color_000000"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/gps_g_n"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/layout_taskdetail_list_taskState"
            android:layout_toRightOf="@+id/ll_taskdetail_list_map"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_taskdetail_list_taskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:text="【对象名称】" />

            <TextView
                android:id="@+id/tv_taskdetail_list_taskType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="设备类型"
                android:textColor="@color/app_default_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_taskdetail_list_taskState"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_taskdetail_list_taskState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/waiting" />

            <TextView
                android:id="@+id/tv_taskdetail_list_taskState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待处理" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/iv_taskdetail_list_item_taskdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任务条目说明" 
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>

</LinearLayout>