<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/bg_svprogressfault"
        android:minWidth="120dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/progress_dialog_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/loading02" />

        <TextView
            android:id="@+id/progress_dialog_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_dialog_img"
            android:layout_centerHorizontal="true"
            android:text="附件下载中"
            android:textColor="#696969" />
    </RelativeLayout>

</LinearLayout>