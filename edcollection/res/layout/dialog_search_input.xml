<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/title"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@color/app_default_color"
                android:gravity="center"
                android:padding="6dp"
                android:text="搜索"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_close_white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="4dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条件："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edtTxt_market_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="请输入要查询内容"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_16" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="线路："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <EditText
                    android:id="@+id/edtTxt_line_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="输入"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_16" >
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="井盖："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <EditText
                    android:id="@+id/edtTxt_jg_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="输入"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_16" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="设备："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <EditText
                    android:id="@+id/edtTxt_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="输入"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_16" >
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="通道："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <EditText
                    android:id="@+id/edtTxt_channel_device"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="输入"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_16" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_radius_white_selector"
                android:text="立即查寻" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>