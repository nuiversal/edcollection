<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_channel_list_item_name"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通道名称"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_channel_list_item_split1"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_channel_list_item_name"
                android:text=", "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_channel_list_item_sort"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_channel_list_item_split1"
                android:text="序号"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_channel_list_item_split2"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_channel_list_item_sort"
                android:text=", "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_channel_list_item_channelType"
                style="@style/text_Size16_color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_channel_list_item_split2"
                android:text="通道类型"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_channel_list_item_order_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="#D7D7D7"
            android:padding="4dp"
            android:text="序号更改"
            android:textColor="#666666" />

        <ImageView
            android:id="@+id/iv_channel_list_item_del"
            style="@style/text_Size16_color_000000"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/delete"
            android:padding="5dp" />
    </LinearLayout>

</LinearLayout>