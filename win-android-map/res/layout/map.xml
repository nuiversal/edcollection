<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ocn.himap.maps.HiBaseMaps
        android:id="@+id/map_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dip"
        android:orientation="vertical"
        android:paddingTop="5dp" >

        <ImageButton
            android:id="@+id/imgBtn_map_mapSwitch"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_radius_white_selector"
            android:src="@drawable/ic_mapswitcher" />

        <ImageButton
            android:id="@+id/imgBtn_map_measure"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_radius_white_selector"
            android:src="@drawable/ic_measure" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_map_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5sp"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <ImageButton
            android:id="@+id/imgBtn_map_zoomIn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_radius_top_selector"
            android:src="@drawable/ic_zoomin"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imgBtn_map_zoomOut"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_radius_bottom_selector"
            android:src="@drawable/ic_zoomout"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <ImageButton
            android:id="@+id/imgBtn_map_location"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_radius_white_selector"
            android:src="@drawable/ic_location" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_map_tools_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/tv_map_measureResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/AlphaBlack"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="gone"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/iv_map_crosshair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/map_center" />

</RelativeLayout>