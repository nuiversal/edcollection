<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/offline_attachment_title_text"
            android:textColor="#777777"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_select_photo"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_selecter"
                android:text="图库"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_selecter"
                android:text="拍照"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_make_video"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_selecter"
                android:text="录像"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_recording"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_selecter"
                android:text="录音"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_record_text"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_selecter"
                android:text="文本"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_take_vr"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_selecter"
                android:text="VR"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_selecter"
                android:text="完毕"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="#cdcdcd" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/attachments_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingLeft="4dp" >
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>